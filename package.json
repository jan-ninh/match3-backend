{
  "name": "match3-backend",
  "version": "1.0.0",
  "description": "Match-3 backend (WBS-style TS scaffold)",
  "main": "dist/server.js",
  "type": "module",
  "imports": {
    "#controllers": {
      "development": "./src/controllers/index.ts",
      "default": "./dist/controllers/index.js"
    },
    "#models": {
      "development": "./src/models/index.ts",
      "default": "./dist/models/index.js"
    },
    "#schemas": {
      "development": "./src/schemas/index.ts",
      "default": "./dist/schemas/index.js"
    },
    "#services": {
      "development": "./src/services/index.ts",
      "default": "./dist/services/index.js"
    },
    "#routes": {
      "development": "./src/routes/index.ts",
      "default": "./dist/routes/index.js"
    },
    "#utils": {
      "development": "./src/utils/index.ts",
      "default": "./dist/utils/index.js"
    },
    "#middlewares": {
      "development": "./src/middlewares/index.ts",
      "default": "./dist/middlewares/index.js"
    },
    "#types": "./src/types/index.ts"
  },
  "scripts": {
    "dev": "node --env-file=.env --watch --conditions development src/server.ts",
    "prebuild": "node -e \"require('node:fs').rmSync('dist', { recursive: true, force: true })\"",
    "build": "tsc",
    "start": "node --env-file=.env dist/server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "render-build": "npm install --include=dev && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jan-ninh/match3-backend.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.6",
    "express": "^5.2.1",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^9.1.5",
    "node-schedule": "^2.1.1",
    "tr46": "^6.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mongoose": "^5.11.96",
    "@types/node": "^24.10.10",
    "@types/node-schedule": "^2.1.8",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.3"
  },
  "bugs": {
    "url": "https://github.com/jan-ninh/match3-backend/issues"
  },
  "homepage": "https://github.com/jan-ninh/match3-backend#readme"
}
